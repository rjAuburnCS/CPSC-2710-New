<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module7.controller.RyanMainController">
    <children>
        <MenuBar styleClass="menu-bar" stylesheets="@main.css" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <menus>
                <Menu styleClass="menu" text="File">
                    <items>
                        <MenuItem fx:id="newMenuItem" onAction="#handleNew" styleClass="menu-item" text="New" accelerator="Ctrl+N"/>
                        <MenuItem fx:id="saveMenuItem" onAction="#handleSave" styleClass="menu-item" text="Save" accelerator="Ctrl+S"/>

                        <MenuItem fx:id="exitMenuItem" onAction="#handleExit" styleClass="menu-item" text="Exit" accelerator="Ctrl+Q"/>
                    </items>
                </Menu>
                <Menu styleClass="menu" text="Edit">
                    <items>
                        <MenuItem fx:id="addTaskMenuItem" onAction="#handleAddTask" styleClass="menu-item" text="Add Task" accelerator="Ctrl+A"/>
                        <MenuItem fx:id="editTaskMenuItem" onAction="#handleEditTask" styleClass="menu-item" text="Edit Task" accelerator="Ctrl+E"/>
                        <MenuItem fx:id="deleteTaskMenuItem" onAction="#handleDeleteTask" styleClass="menu-item" text="Delete Task" accelerator="Ctrl+D"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <ListView fx:id="taskListView" prefHeight="200.0" prefWidth="380.0" styleClass="list-view" stylesheets="@main.css"
                  AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="60.0" />

        <Button fx:id="addTaskButton" mnemonicParsing="false" onAction="#handleAddTask" styleClass="button" stylesheets="@main.css" text="Add"
                AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />
        <Button fx:id="editTaskButton" mnemonicParsing="false" onAction="#handleEditTask" styleClass="button" stylesheets="@main.css" text="Edit"
                AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="80.0" />
        <Button fx:id="deleteTaskButton" mnemonicParsing="false" onAction="#handleDeleteTask" styleClass="button" stylesheets="@main.css" text="Delete"
                AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="150.0" />
    </children>
</AnchorPane>
