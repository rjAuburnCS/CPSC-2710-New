<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane stylesheets="@detail.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module7.controller.TaskDetailController">
    <children>
        <Label layoutY="10.0" styleClass="label" text="Task Name:"
               AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" />
        <TextField fx:id="taskNameField" prefWidth="200.0" styleClass="text-field"
                   AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="10.0" />

        <Label layoutY="50.0" styleClass="label" text="Description:"
               AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="10.0" />
        <TextArea fx:id="taskDescriptionArea" prefHeight="100.0" prefWidth="200.0" styleClass="text-area"
                  AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="10.0"
                  />

        <Label layoutY="170.0" styleClass="label" text="Due Date:"
               AnchorPane.topAnchor="170.0" AnchorPane.leftAnchor="10.0" />
        <DatePicker fx:id="dueDatePicker" styleClass="date-picker"
                    AnchorPane.topAnchor="170.0" AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="10.0" />

        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" styleClass="button" text="Save"
                AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="90.0" />
        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="button" text="Cancel"
                AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="160.0" />
    </children>
</AnchorPane>



