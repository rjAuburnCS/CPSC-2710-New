<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<GridPane fx:id="gridPane" alignment="CENTER" hgap="10" prefHeight="869.0" prefWidth="752.0" vgap="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module3.mod3project.AirportController">
    <!-- Search Fields -->
    <Label text="Ident:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="identField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="IATA Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="iataCodeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Local Code:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="localCodeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Read-Only Fields -->
    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="typeField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="nameField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Elevation:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="elevationField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Country:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="countryField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Region:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="regionField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label text="Municipality:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <TextField fx:id="municipalityField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <!-- Search Button -->
    <Button fx:id="searchButton" prefHeight="25.0" prefWidth="64.0" text="Search" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="9" GridPane.valignment="CENTER" />

    <!-- Map Section -->
    <Pane fx:id="mapPane" prefHeight="200" prefWidth="400" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="10" />
    <WebView fx:id="webView" prefHeight="200" prefWidth="400" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="11" />

    <!-- Column Constraints -->
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>

    <!-- Row Constraints -->
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
